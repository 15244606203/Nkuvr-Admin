<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nkuvr.dao.UserMapper">
    <select id="findAll" resultType="com.nkuvr.pojo.User">
        select * from sys_user
    </select>
    <select id="queryForLogin" resultType="com.nkuvr.pojo.User">
        select * from sys_user where sys_user.username = #{username} and sys_user.password = #{password}
    </select>

</mapper>